<h2 class="text-3xl font-extrabold text-cyan-400 mb-8 text-center tracking-wide">
  Edit <%= resource_name.to_s.humanize %>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6 max-w-md mx-auto bg-gradient-to-br from-gray-900 via-black to-gray-800 border border-gray-700 rounded-xl shadow-2xl p-10" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block text-cyan-300 font-semibold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4 text-cyan-200 text-sm bg-gray-800 border border-cyan-400 rounded px-4 py-2">
      <span class="font-semibold">Currently waiting confirmation for:</span>
      <span class="text-cyan-400"><%= resource.unconfirmed_email %></span>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "block text-cyan-300 font-semibold mb-2" %>
    <span class="text-cyan-200 text-xs ml-2">(leave blank if you don't want to change it)</span>
    <%= f.password_field :password, autocomplete: "new-password",
                         class: "w-full mt-2 px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
    <% if @minimum_password_length %>
      <em class="block text-xs text-cyan-200 mt-1">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-cyan-300 font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "block text-cyan-300 font-semibold mb-2" %>
    <span class="text-cyan-200 text-xs ml-2">(we need your current password to confirm your changes)</span>
    <%= f.password_field :current_password, autocomplete: "current-password",
                         class: "w-full mt-2 px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
  </div>

  <div class="actions">
    <%= f.submit "Update",
                 class: "w-full bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-2 px-6 rounded-full transition shadow-md" %>
  </div>
<% end %>

<h3 class="text-xl font-bold text-red-400 mt-12 mb-4 text-center">Cancel my account</h3>

<div class="flex flex-col items-center space-y-4 mb-8">
  <span class="text-cyan-200">Unhappy?</span>
  <%= button_to "Cancel my account",
                registration_path(resource_name),
                data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                method: :delete,
                class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-full transition shadow-md" %>
  <%= link_to "Back", :back, class: "text-cyan-400 hover:text-cyan-300 font-semibold underline underline-offset-4 transition" %>
</div>
