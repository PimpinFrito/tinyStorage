<h2 class="text-3xl font-extrabold text-cyan-400 mb-8 text-center tracking-wide">
  Change your password
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6 max-w-md mx-auto bg-gradient-to-br from-gray-900 via-black to-gray-800 border border-gray-700 rounded-xl shadow-2xl p-10" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password", class: "block text-cyan-300 font-semibold mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-cyan-200 mb-2 block">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                         class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: "block text-cyan-300 font-semibold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password",
                 class: "w-full bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-2 px-6 rounded-full transition shadow-md" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= render "devise/shared/links" %>
</div>
