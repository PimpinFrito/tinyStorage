<div>
  <h2 class="text-3xl font-extrabold text-cyan-400 mb-8 text-center tracking-wide">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 max-w-md mx-auto bg-gradient-to-br from-gray-900 via-black to-gray-800 border border-gray-700 rounded-xl shadow-2xl p-10" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "block text-cyan-300 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "block text-cyan-300 font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 bg-gray-800 border border-cyan-400 rounded-lg text-cyan-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 transition" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "form-checkbox text-cyan-400 bg-gray-900 border-cyan-400 focus:ring-cyan-400" %>
        <%= f.label :remember_me, class: "ml-2 text-cyan-200" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-2 px-6 rounded-full transition shadow-md" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>