<div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-br from-black ">
  <!-- Logo/Brand -->
  <div class="mb-12">
    <span class="text-cyan-400 font-extrabold text-5xl tracking-widest drop-shadow-lg select-none" id="heroBrand">
      Tiny Storage
    </span>
  </div>

  <!-- Headline -->
  <h1 class="text-4xl md:text-5xl font-extrabold text-cyan-200 mb-6 text-center tracking-wide drop-shadow">
    The Future of Simple File Sharing
  </h1>
  <p class="text-cyan-100 text-lg md:text-xl mb-12 text-center max-w-xl">
    Effortlessly upload, manage, and share your files with a sleek, secure, and lightning-fast platform.
  </p>

  <!-- Call to Action -->
  <div class="flex space-x-4 justify-center">
    <%= link_to "Get Started", new_user_registration_path,
                class: "bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-3 px-8 rounded-full text-lg transition shadow-md" %>
    <%= link_to "Sign In", new_user_session_path,
                class: "bg-gray-800 border border-cyan-400 text-cyan-400 hover:bg-cyan-900 hover:text-cyan-300 font-bold py-3 px-8 rounded-full text-lg transition shadow-md" %>
  </div>

  <!-- Subtle Glow/Accent -->
  <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-96 h-32 bg-cyan-400 opacity-20 blur-3xl rounded-full pointer-events-none"></div>
</div>
